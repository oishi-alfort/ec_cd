<div class="container">
	<div clas="row">
		<h1><h2><%= @cd.cd_title %></h2></h1>
		<div class="col-lg-4">
			<%= attachment_image_tag(@cd, :cd_image, :fill, 300, 300) %>
		</div>
		<div class="col-lg-8">
			<p><%= @cd.cd_profile %></p>
		</div>
	</div>
	<div clas="row">
		<div class="col-lg-4">
			<strong><%= @cd.cd_title %></strong>
			<p><%= link_to @cd.artist.artist_name, artist_path(@cd.artist.id) %></p>
			<p>Price: <%= @cd.price %></p>
			<p>Quantity: <button>Add To Cart</button></p>
			
			<div>
			<% if user_signed_in? %>
					<div>
						<div>
						<%= link_to cds_path do %>
						<!-- WILL BE cd_cart_item_path(cd.id), method: :post -->
						<i class="fas fa-cart-arrow-down" style="font-size:30px;"></i>
						<% end %>
						</div>
						<% if cd.favorited_by?(current_user) %>
							<div>
								<%= link_to cd_favorite_path(cd), method: :delete do %>
								<i class="far fa-heart" aria-hidden="true" style="color: red;"></i>
								<% end %>
							</div>
						<% else %>
							<div>
							<%= link_to cd_favorite_path(cd), method: :post do %>
							<i class="far fa-heart" aria-hidden="true"></i>
							<% end %>
							</div>
						<% end %>
					</div>
				<% end %>
			</div>

			<div>
				<h3>Comments</h3>
				COMMENT AREA
			</div>
		</div>
		<div class="col-lg-8">
			AREA FOR SONGS
		</div>
	</div>

	<div clas="row">
		<div class="col-lg-2">
			<%= link_to "Back", cds_path, class: "btn btn-default" %>
		</div>
		<div class="col-lg-10">
		</div>
	</div>
</div>