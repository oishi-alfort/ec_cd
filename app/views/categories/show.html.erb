<div class="container">
<div class="row">
<div class="col-lg-12">
<h1><%= @category.category_name %></h1>
</div>
</div>
</div>

<div class="container">
<div class="row">
<div class="col-lg-12">
<% if @category.cds.present? %>
	<% @category.cds.each do |cd| %>
		<div class="eachCd">
			<%= link_to cd_path(cd.id) do %>
			<%= attachment_image_tag cd, :cd_image, :fill, 300, 300, fallback: "/images/no_image.jpg" %>
			<% end %>
			<h4><%= cd.cd_title %></h4>
			<h5><%= link_to cd.artist.artist_name %></h5>
		</div>
	<% end %>
<% end %>
</div>
</div>
</div>
<div class="container">
	<div clas="row">
		<div class="col-lg-2">
			<%= link_to "カテゴリー一覧に戻る", categories_path, class: "btn btn-default" %>
		</div>
		<div class="col-lg-10">
		</div>
	</div>
</div>

<style>
	.eachCd {
		display: inline-block;
	}
</style>