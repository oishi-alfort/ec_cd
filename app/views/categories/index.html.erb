<div class="container">
	<h1>Categories#index</h1>
	<% if @categories.present? %>
		<div clas="row">
			<div class="col-lg-4">
				<% @categories.each do |category| %>
				<% if category.id % 3 == 0 %>
				<div class="eachCategory">
					<%= link_to category_path(category.id) do %>
					<%= attachment_image_tag(category.cds.last, :cd_image, :fill, 300, 300, format: "jpg", fallback: "no_image.jpg", size: '100X100') %>
					<% end %>
					<p><%= link_to category.category_name, category_path(category.id) %><%= category.id %></p>
				</div>
				<% end %>
				<% end %>
			</div>
			<div class="col-lg-4">
				<% @categories.each do |category| %>
				<% if category.id % 3 == 2 %>
				<div class="eachCategory">
					<%= link_to category_path(category.id) do %>
					<%= attachment_image_tag(category.cds.last, :cd_image, :fill, 300, 300, format: "jpg", fallback: "no_image.jpg", size: '100X100') %>
					<% end %>
					<p><%= link_to category.category_name, category_path(category.id) %><%= category.id %></p>
				</div>
				<% end %>
				<% end %>
			</div>
			<div class="col-lg-4">
				<% @categories.each do |category| %>
				<% if category.id % 3 == 1 %>
				<div class="eachCategory">
					<%= link_to category_path(category.id) do %>
					<%= attachment_image_tag(category.cds.last, :cd_image, :fill, 300, 300, format: "jpg", fallback: "no_image.jpg", size: '100X100') %>
					<% end %>
					<p><%= link_to category.category_name, category_path(category.id) %><%= category.id %></p>
				</div>
				<% end %>
				<% end %>
			</div>
		</div>
	<% end %>
</div>

<style>
	.eachCategory {
		height: 300px;
		display: inline-block;
	}
</style>