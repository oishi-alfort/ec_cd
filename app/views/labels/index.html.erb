<div class="container">
	<div clas="row">
		<div class="col-lg-4">
		</div>
		<div class="col-lg-4">
			<h1>レーベル情報</h1>
			<div>
				<h3>新レーベル登録</h3>
				<%= form_with model: @label do |f| %>
					<%= render 'layouts/error_messages', model: f.object %>
					<div>
						<%= f.label :label_name, "レーベル名" %>
  						<%= f.text_field :label_name, class: "form-control" %>
  					</div>
  					<div>
  						<%= f.submit "登録", class: "btn btn-default" %>
  					</div>
				<% end %>
			</div>
			<div>
				<h3>レーベル一覧</h3>
				<table>
					<% if @labels.present? %>
					<% @labels.each do |label| %>
					<tr>
					 <li><%= label.label_name %></li>
					</tr>
					 <% end %>
					 <% end %>
				</table>
			</div>
		</div>
		<div class="col-lg-4">
		</div>
	</div>
</div>
<div class="marginControl">
</div>
<div class="container">
	<div clas="row">
		<div class="col-lg-2">
		</div>
		<div class="col-lg-2">
			<%= link_to "TOPに戻る", root_path, class: "btn btn-default" %>
		</div>
		<div class="col-lg-10">
		</div>
	</div>
</div>

<style>
	.marginControl {
		margin: 10px 0;
		height: 10px;
		width: 100%;
	}
</style>