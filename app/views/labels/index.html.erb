<div class="container">
	<div clas="row">
		<div class="col-lg-4">
		</div>
		<div class="col-lg-4">
			<h1>Labels#index & New</h1>
			<div>
				<h3>New Label</h3>
				<%= form_with model: @label do |f| %>
					<%= render 'layouts/error_messages', model: f.object %>
					<div>
						<%= f.label :label_name %>
  						<%= f.text_field :label_name, class: "form-control" %>
  					</div>
  					<div>
  						<%= f.submit  class: "btn btn-default" %>
  					</div>
				<% end %>
			</div>
			<div>
				<h3>Label List</h3>
				<table>
					<% if @labels.present? %>
					<% @labels.each do |label| %>
					<tr>
					 <li><%= label.label_name %></li>
					</tr>
					 <% end %>
					 <% end %>
				</table>
			</div>
		</div>
		<div class="col-lg-4">
		</div>
	</div>
</div>
