<div class="container">
	<div clas="row">
		<h1>歌手詳細</h1>
		<div class="col-lg-4">
			<%= attachment_image_tag(@artist, :artist_image, :fill, 300, 300) %>
		</div>
		<div class="col-lg-8">
			<h2><%= @artist.artist_name %></h2>
			<p><%= @artist.artist_profile %></p>
			<% if user_signed_in? && current_user.admin?  %>
				<%= link_to "歌手情報編集", edit_artist_path(@artist.id), class: "btn btn-default" %>
				<%= link_to "歌手削除", artist_path(@artist.id), method: :delete, class: "btn btn-default" %>
			<% end %>
		</div>
	</div>
</div>
<div class="container">
	<div clas="row">
		<h3><%= @artist.artist_name %>のCD</h3>
			<% if @artist.cds.present? %>
			<% @artist.cds.each do |cd| %>
				<div class="col-lg-4">
					<div>
						<%= link_to cd_path(cd.id) do %>
						<%= attachment_image_tag(cd, :cd_image, :fill, 300, 300) %>
						<% end %>
					</div>
					<div>
						<h4><%= link_to cd.cd_title, cd_path(cd.id) %></h4>
						<h5><%= cd.artist.artist_name %></h5>
						<p>価格: <%= cd.price %></p>
					</div>
				</div>
			<% end %>
			<% end %>
	</div>
</div>
<div class="container">
	<div clas="row">
		<div class="col-lg-2">
			<%= link_to "戻る", root_path, class: "btn btn-default" %>
		</div>
		<div class="col-lg-10">
		</div>
	</div>
</div>