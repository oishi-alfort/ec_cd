<div class="container">
	<div clas="row">
		<h1>Artists#show</h1>
		<div class="col-lg-4">
			<%= attachment_image_tag(@artist, :artist_image, :fill, 300, 300) %>
		</div>
		<div class="col-lg-8">
			<h2><%= @artist.artist_name %></h2>
			<p><%= @artist.artist_profile %></p>
			<%= link_to "Edit", edit_artist_path(@artist.id), class: "btn btn-default" %>
			<%= link_to "Delete", artist_path(@artist.id), method: :delete, class: "btn btn-default" %>
		</div>
	</div>
</div>
<div class="container">
	<div clas="row">
		<h3><%= @artist.artist_name %>'s CDs</h3>
			<% if @artist.cds.present? %>
			<% @artist.cds.each do |cd| %>
				<div class="col-lg-4">
					<div>
						<%= link_to cd_path(cd.id) do %>
						<%= attachment_image_tag(cd, :cd_image, :fill, 300, 300) %>
						<% end %>
					</div>
					<div>
						<p><%= link_to cd.cd_title, cd_path(cd.id) %></p>
						<p>Price: <%= cd.price %></p>
					</div>
				</div>
			<% end %>
			<% end %>
	</div>
</div>
<div class="container">
	<div clas="row">
		<div class="col-lg-2">
			<button>Back</button>
		</div>
		<div class="col-lg-10">
		</div>
	</div>
</div>