<div class="container">
<div clas="row">
<div class="col-lg-12">
<h1>ピックアップ編集</h1>
</div>
</div>
</div>

<div class="container">
<div clas="row">
<div class="col-lg-4">
<%= attachment_image_tag(@pickup.cd, :cd_image, :fill, 300, 300) %>
</div>

<div class="col-lg-8">
<h4><%= @pickup.cd.cd_title %></h4>
<h4><%= @pickup.cd.artist.artist_name %></h4>
<h4>価格: <%= @pickup.cd.price %></h4>
<p><%= @pickup.cd.cd_profile %></p>
</div>
</div>
</div>

<div class="container">
<div clas="row">
<div class="col-lg-12">
	<h3 class="text-center">編集内容</h3>
<%= render 'form', pickup: @pickup %>

<%= link_to 'ピックアップに戻る', pickup_path(@pickup), class: "btn btn-default"  %>
</div>
</div>
</div>